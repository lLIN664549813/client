/* 页面整体样式 */
.recharge-page.data-v-571bf42e {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  background-color: #ffffff;
  overflow: hidden;
  /* 隐藏页面整体滚动条 */
}
/* 主体内容区 */
.recharge-content.data-v-571bf42e {
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  /* 确保scroll-view是唯一的滚动区域 */
}
/* 二维码卡片 */
.qrcode-card.data-v-571bf42e {
  background-color: #fff;
  text-align: center;
  margin-bottom: 30rpx;
}
.qrcode-card .qrcode-img.data-v-571bf42e {
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto 20rpx;
  border-radius: 40rpx 40rpx 40rpx 40rpx;
  border: 2rpx solid #E5E5E5;
  padding: 20rpx;
}
.qrcode-card .qrcode-tip.data-v-571bf42e {
  display: block;
  font-weight: 400;
  font-size: 40rpx;
  color: #000000;
  line-height: 46rpx;
  margin-bottom: 36rpx;
}
.qrcode-card .address-text.data-v-571bf42e {
  display: block;
  color: #333;
  word-break: break-all;
  margin-bottom: 44rpx;
  font-weight: 400;
  font-size: 40rpx;
  color: #000000;
  line-height: 46rpx;
}
.qrcode-card .copy-btn.data-v-571bf42e {
  display: block;
  width: 190rpx;
  height: 84rpx;
  line-height: 84rpx;
  background: #FFFFFF;
  border-radius: 18rpx 18rpx 18rpx 18rpx;
  border: 2rpx solid #ccc;
  margin-bottom: 44rpx;
}
.red-tip.data-v-571bf42e {
  display: block;
  font-weight: 500;
  font-size: 36rpx;
  color: #FB0B0B;
  line-height: 54rpx;
}
/* 充值信息列表 */
.info-list.data-v-571bf42e {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  margin-top: 32rpx;
}
.info-item.data-v-571bf42e {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F6F7FB;
  border-radius: 24rpx 24rpx 24rpx 24rpx;
  padding: 28rpx 16rpx;
  margin-bottom: 16rpx;
}
.info-label.data-v-571bf42e {
  font-weight: 400;
  font-size: 40rpx;
  color: #000000;
  line-height: 46rpx;
}
.info-value.data-v-571bf42e {
  font-weight: 400;
  font-size: 40rpx;
  color: #9CA2AD;
  line-height: 46rpx;
}
/* 到账提示 */
.arrival-tip.data-v-571bf42e {
  display: block;
  font-weight: 400;
  font-size: 40rpx;
  color: #F80A0A;
  line-height: 46rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
/* 保存至相册按钮 */
.save-btn.data-v-571bf42e {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  font-size: 32rpx;
  border: none;
}
