/* 页面整体样式 */
.collection-page.data-v-70c034df {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ffffff;
}
/* 顶部导航栏 */
.collection-header.data-v-70c034df {
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}
.back-icon.data-v-70c034df {
  color: #333;
  margin-right: 20rpx;
}
.header-title.data-v-70c034df {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
/* 主体内容区 */
.collection-content.data-v-70c034df {
  flex: 1;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
/* 收款卡片 */
.collection-card.data-v-70c034df {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  position: relative;
}
.collection-card .card-title-one.data-v-70c034df {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.collection-card .card-title-two.data-v-70c034df {
  width: 212rpx;
  height: 44rpx;
  font-weight: 300;
  font-size: 30rpx;
  color: #2A2C24;
  line-height: 44rpx;
  text-align: center;
  background: #F1F1F1;
  border-radius: 56rpx 56rpx 56rpx 56rpx;
  margin-top: 48rpx;
}
.collection-card .tag-text.data-v-70c034df {
  font-weight: 700;
  font-size: 24rpx;
  color: #141416;
  line-height: 48rpx;
}
/* 默认标签 */
.default-tag.data-v-70c034df {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  display: flex;
  align-items: center;
  background-color: #9933ff;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}
.tag-icon.data-v-70c034df {
  margin-right: 4rpx;
}
/* 卡片标签 */
.card-label.data-v-70c034df {
  position: absolute;
  top: 30rpx;
  right: 60rpx;
  font-size: 24rpx;
  color: #666;
}
/* 二维码 */
.qrcode-img.data-v-70c034df {
  width: 240rpx;
  height: 240rpx;
  margin: 40rpx auto 20rpx;
}
/* 收款地址 */
.address-text.data-v-70c034df {
  display: block;
  font-weight: 900;
  font-size: 30rpx;
  color: #1B1E26;
  line-height: 40rpx;
  word-break: break-all;
}
/* 删除确认弹窗 */
.delete-popup.data-v-70c034df {
  width: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}
.popup-title.data-v-70c034df {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 52rpx;
}
.popup-desc.data-v-70c034df {
  font-weight: 400;
  font-size: 40rpx;
  color: #0B1526;
  line-height: 44rpx;
  text-align: justify;
  text-align: center;
  margin-bottom: 30rpx;
}
.popup-btn-group.data-v-70c034df {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}
.popup-btn.data-v-70c034df {
  flex: 1;
  height: 70rpx;
  width: 280rpx;
  line-height: 70rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  border: none;
}
.reset-btn.data-v-70c034df {
  background-color: #fff;
  color: #404040;
  border: 2px solid #9933ff;
}
