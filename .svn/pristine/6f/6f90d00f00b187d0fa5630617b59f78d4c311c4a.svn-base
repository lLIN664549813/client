




















































































/* 页面整体样式 */
.wallet-page.data-v-db308f62 {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #ffffff;
}
.back-icon.data-v-db308f62 {
    color: #333;
}
.bill-icon.data-v-db308f62 {
    width: 50rpx;
    height: 50rpx;
}
.header-title.data-v-db308f62 {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}
/* 主体内容区 */
.wallet-content.data-v-db308f62 {
    flex: 1;
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    text-align: center;
}
/* 钱包插画 */
.wallet-illustration.data-v-db308f62 {
    margin-bottom: 40rpx;
}
/* 资产标题 */
.asset-title.data-v-db308f62 {
    display: block;
    margin-bottom: 30rpx;
    text-align: left;
    font-weight: 400;
    font-size: 36rpx;
    color: #0B1526;
    line-height: 50rpx;
}
/* 资产列表 */
.asset-list.data-v-db308f62 {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 60rpx;
    text-align: left;
}
.asset-item.data-v-db308f62 {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
}
.asset-item.data-v-db308f62:last-child {
    border-bottom: none;
}
.asset-type.data-v-db308f62 {
    
    font-weight: 600;
    font-size: 36rpx;
    color: #121212;
    line-height: 96rpx;
}
.asset-value.data-v-db308f62 {
    font-weight: 600;
    font-size: 30rpx;
    color: #121212;
    line-height: 96rpx;
}
/* 功能按钮组 */
.btn-group.data-v-db308f62 {
    position: fixed;
    bottom: 40rpx;
    left: 0; 
    right: 0;
    width: 100%;
    display: flex;
    gap: 30rpx;
    padding: 0 20rpx;
}
.wallet-btn.data-v-db308f62 {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 20rpx;
    font-size: 40rpx;
    border: none;
}
.transfer-btn.data-v-db308f62 {
    background-color: #fff;
    color: #404040;
    border: 2px solid #9933ff;
}

