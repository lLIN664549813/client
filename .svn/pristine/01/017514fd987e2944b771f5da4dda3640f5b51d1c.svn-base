import request from '@/utils/request'

// 登录方法
export function login(loginCode, password, deviceUuid, deviceName) {
  const data = {
    loginCode,
    password,
    deviceUuid,
    deviceName,
    loginType:'password'
  }
  return request({
    'url': '/gateway/api/auth/login',
    headers: {
      isToken: false
    },
    'method': 'post',
    'data': data
  })
}

// 注册方法
export function register(data) {
  return request({
    url: '/gateway/wap/share/register',
    headers: {
      isToken: false,
      'Content-Type': 'application/x-www-form-urlencoded;charset=UTF-8'
    },
    method: 'post',
    data: data
  })
}

// 获取用户详细信息
export function getInfo() {
  return request({
    'url': '/gateway/api/member/info',
    'method': 'get'
  })
}

