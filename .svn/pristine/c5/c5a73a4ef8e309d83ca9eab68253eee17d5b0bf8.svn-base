/* 页面整体样式 */
.record-page.data-v-eecc25a0 {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  background-color: #ffffff;
}
/* 主体内容区 */
.record-content.data-v-eecc25a0 {
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
}
/* 切换标签组 */
.tab-group.data-v-eecc25a0 {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 18rpx;
  margin-top: 52rpx;
}
.tab-group .tab-item.data-v-eecc25a0 {
  width: 208rpx;
  height: 98rpx;
  background: #EDEEF0;
  border-radius: 12rpx 12rpx 12rpx 12rpx;
  border: 0rpx solid rgba(237, 238, 240, 0.8784);
  line-height: 98rpx;
  font-weight: 400;
  font-size: 28rpx;
  color: #0B1526;
  text-align: center;
}
.tab-group .tab-item.active.data-v-eecc25a0 {
  background: #F4F0FF;
  border-radius: 12rpx 12rpx 12rpx 12rpx;
  border: 2rpx solid #5E28FF;
  color: #5F2AFF;
}
