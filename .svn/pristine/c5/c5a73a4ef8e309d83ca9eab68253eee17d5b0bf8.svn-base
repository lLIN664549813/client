.record-list.data-v-eecc25a0 {
  margin-bottom: 40rpx;
}
.record-item.data-v-eecc25a0 {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 48rpx;
  font-weight: 600;
  font-size: 32rpx;
  color: #343434;
