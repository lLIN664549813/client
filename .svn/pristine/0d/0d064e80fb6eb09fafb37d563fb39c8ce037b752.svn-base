  font-weight: bold;
  text-align: center;
  margin-bottom: 52rpx;
  color: #333;
}
.popup-item.data-v-7be12301 {
  display: flex;
  align-items: center;
  margin-bottom: 44rpx;
}
.popup-label.data-v-7be12301 {
  font-size: 28rpx;
  color: #333;
  width: 120rpx;
