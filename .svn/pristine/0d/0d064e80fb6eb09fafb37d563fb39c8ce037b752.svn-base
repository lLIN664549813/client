/* 页面整体样式 */
.transfer-page.data-v-7be12301 {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ffffff;
}
/* 主体内容区 */
.transfer-content.data-v-7be12301 {
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
}
/* 切换标签组 */
.tab-group.data-v-7be12301 {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 18rpx;
  margin-top: 52rpx;
}
.tab-group .tab-item.data-v-7be12301 {
  width: 208rpx;
  height: 98rpx;
  background: #EDEEF0;
  border-radius: 12rpx 12rpx 12rpx 12rpx;
  border: 0rpx solid rgba(237, 238, 240, 0.8784);
  line-height: 98rpx;
  font-weight: 400;
  font-size: 28rpx;
  color: #0B1526;
  text-align: center;
}
.tab-group .tab-item.active.data-v-7be12301 {
  background: #F4F0FF;
  border-radius: 12rpx 12rpx 12rpx 12rpx;
  border: 2rpx solid #5E28FF;
  color: #5F2AFF;
}
/* 表单输入区 */
.form-list.data-v-7be12301 {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}
.form-item.data-v-7be12301 {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}
.form-item.data-v-7be12301:last-child {
  margin-bottom: 10rpx;
}
.form-label.data-v-7be12301 {
  font-weight: 400;
  font-size: 34rpx;
  color: #000000;
  line-height: 40rpx;
  margin-bottom: 38rpx;
}
.form-input.data-v-7be12301 {
  height: 120rpx;
  border-radius: 8rpx;
  padding: 38rpx 22rpx;
  font-size: 28rpx;
  color: #333;
  background: #F6F7FB;
  border-radius: 24rpx 24rpx 24rpx 24rpx;
}
.balance-tip.data-v-7be12301 {
  display: block;
  font-weight: 500;
  font-size: 28rpx;
  color: #FB0B0B;
  line-height: 42rpx;
  margin-top: 20rpx;
}
/* 转账按钮 */
.transfer-btn.data-v-7be12301 {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  font-size: 32rpx;
  border: none;
  margin-bottom: 50rpx;
}
