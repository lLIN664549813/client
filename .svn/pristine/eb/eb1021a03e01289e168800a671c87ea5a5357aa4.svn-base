






































































































/* 页面整体样式 */
.add-collection-page.data-v-eed0fbe6 {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #f5f5f5;
}
/* 顶部导航栏 */
.add-header.data-v-eed0fbe6 {
    display: flex;
    align-items: center;
    height: 88rpx;
    padding: 0 30rpx;
    background-color: #fff;
    border-bottom: 1px solid #eee;
}
.back-icon.data-v-eed0fbe6 {
    color: #333;
    margin-right: 20rpx;
}
.header-title.data-v-eed0fbe6 {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}
/* 主体内容区 */
.add-content.data-v-eed0fbe6 {
    flex: 1;
    padding: 30rpx;
    box-sizing: border-box;
}
/* 表单区域 */
.form-list.data-v-eed0fbe6 {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 40rpx;
}
.form-item.data-v-eed0fbe6 {
    display: flex;
    flex-direction: column;
    margin-bottom: 30rpx;
}
.form-label.data-v-eed0fbe6 {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 10rpx;
}
.form-input.data-v-eed0fbe6 {
    height: 70rpx;
    border: 1px solid #eee;
    border-radius: 8rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    color: #333;
}
/* 二维码上传 */
.qrcode-upload.data-v-eed0fbe6 {
    margin-bottom: 20rpx;
}
.upload-area.data-v-eed0fbe6 {
    height: 120rpx;
    border: 1px dashed #eee;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.upload-icon.data-v-eed0fbe6 {
    color: #999;
}
/* 红色提示 */
.warn-text.data-v-eed0fbe6 {
    display: block;
    font-size: 22rpx;
    color: #ff3333;
    line-height: 1.4;
    margin-top: 10rpx;
}
/* 确认按钮 */
.confirm-btn.data-v-eed0fbe6 {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    background: linear-gradient(90deg, #9933ff 0%, #cc66ff 100%);
    color: #fff;
    border-radius: 44rpx;
    font-size: 32rpx;
    border: none;
}

